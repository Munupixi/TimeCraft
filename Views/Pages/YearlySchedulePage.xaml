<Page x:Class="TimeCraft.YearlySchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TimeCraft"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="YearlySchedule">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Black" Name="HeaderStackPanel">
            <TextBlock Text="2024" FontSize="24" FontWeight="Bold" Foreground="White" Margin="10" Name="YearTextBlock" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Opacity="0" Width="Auto" />
            <Button Content="&lt;" FontSize="16" Foreground="White" Name="PreviousButton" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Opacity="0" Width="Auto" />
            <Button Content="Сегодня" FontSize="16" Foreground="White" Name="TodayButton" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Opacity="0" Width="Auto" />
            <Button Content="&gt;" FontSize="16" Foreground="White" Name="NextButton" />
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Opacity="0" Width="Auto" />
            <Button Content="День" FontSize="16" Foreground="White" Margin="0,0,2,0" Name="DayButton" />
            <Button Content="Неделя" FontSize="16" Foreground="White" Margin="2" Name="WeekButton" />
            <Button Content="Месяц" FontSize="16" Foreground="White" Margin="2" Name="MonthButton" />
            <Button Content="Год" FontSize="16" Foreground="White" Margin="2,0,0,0" Name="YearButton" />
        </StackPanel>

        <!-- Область прокрутки и контроль месяцев -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Name="MonthsScrollViewer">
            <ItemsControl Name="MonthForYearUserControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Name="MonthBorder">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="White" Background="Black"
                                           TextAlignment="Center" Name="MonthNameTextBlock" />
                                <UniformGrid Grid.Row="1"
                                             Columns="7" Rows="6"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch" Name="DaysUniformGrid">
                                    <!-- Привязка ItemsSource к дням месяца -->
                                </UniformGrid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Name="MonthsUniformGrid" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>