<Page x:Class="TimeCraft.MonthlySchedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeCraft"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MonthlySchedule">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для заголовка дней недели -->
            <RowDefinition Height="Auto"/>
            <!-- Для заголовка и кнопок навигации -->
            <RowDefinition Height="*"/>
            <!-- Для сетки календаря -->
        </Grid.RowDefinitions>

        <!-- Заголовок дней недели -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <TextBlock Text="Mon" FontSize="16" Width="80" TextAlignment="Center"/>
            <TextBlock Text="Tue" FontSize="16" Width="80" TextAlignment="Center"/>
            <TextBlock Text="Wed" FontSize="16" Width="80" TextAlignment="Center"/>
            <TextBlock Text="Thu" FontSize="16" Width="80" TextAlignment="Center"/>
            <TextBlock Text="Fri" FontSize="16" Width="80" TextAlignment="Center"/>
            <TextBlock Text="Sat" FontSize="16" Width="80" TextAlignment="Center"/>
            <TextBlock Text="Sun" FontSize="16" Width="80" TextAlignment="Center"/>
        </StackPanel>

        <!-- Заголовок и кнопки навигации -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="&lt;" FontSize="16"/>
            <TextBlock Text="March 2024" FontSize="24" FontWeight="Bold" Margin="10"/>
            <Button Content="&gt;" FontSize="16"/>
        </StackPanel>

        <!-- Сетка для дней месяца -->
        <UniformGrid Grid.Row="2" Columns="7" Rows="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Заполнители для дней. В дальнейшем замените на UserControl. -->
            <!-- Для каждой ячейки сетки создается Border с Margin. -->
        </UniformGrid>
    </Grid>
</Page>
