<Page x:Class="TimeCraft.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TimeCraft"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Viewbox>
        <Grid Width="800" Height="450">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="Впервые в TimeCraft?" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10" />

            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <TextBox x:Name="NameTextBox" Width="200" Margin="0,10,0,10" Text="Имя" />
                <TextBox x:Name="AgeTextBox" Width="200" Margin="0,10,0,10" Text="Возраст" />
                <TextBox x:Name="LoginTextBox" Width="200" Margin="0,10,0,10" Text="Логин" />
                <TextBox x:Name="PasswordTextBox" Width="200" Margin="0,10,0,10" Text="Пароль" />
                <TextBox x:Name="PasswordAgainTextBox" Width="200" Margin="0,10,0,10" Text="Повторите пароль" />
            </StackPanel>

            <CheckBox x:Name="ConfirmProgramPolicyCheckBox" Grid.Row="2" Content="согласие на обработку персональных данных" HorizontalAlignment="Center" Margin="0,10,0,10" Checked="ConfirmProgramPolicyCheckBox_Checked" />

            <Button x:Name="ConfirmButton" Grid.Row="3" Content="Регистрация" Width="200" Height="40" HorizontalAlignment="Center" Margin="0,20,0,0" Click="ConfirmButton_Click" />

            <TextBlock x:Name="AuthorizationTextBlock" Grid.Row="4" Text="Уже есть аккаунт?" HorizontalAlignment="Center" Margin="0,10,0,0" />
        </Grid>
    </Viewbox>
</Page>